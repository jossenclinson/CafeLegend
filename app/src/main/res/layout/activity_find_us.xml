<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:id="@+id/drawerLayoutFindUs"
    tools:context=".FindUs"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <include
            layout="@layout/toolbar"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Cafe Legend App"
            android:textColor="@color/brownTitle"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Since 2022"
            android:textColor="@color/brownTitle"
            android:textSize="16dp"
            android:textStyle="italic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Find Us"
            android:textColor="@color/brownTitle"
            android:textSize="34dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Samsan Tech"
            android:textColor="@color/brownTitle"
            android:textSize="18dp"
            android:layout_marginLeft="-35dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Best App Development Company"
            android:textColor="@color/grey"
            android:textSize="12dp"
            android:layout_marginLeft="-5dp"
            android:textStyle="italic"
            />
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Jl. Pakuan No.3, Sumur Batu, Babakan Madang, Bogor Regency, West Java 16810"
            android:textColor="@color/brownTitle"
            android:textSize="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="samsantech@gmail.com"
            android:textColor="@color/brownTitle"
            android:textSize="18dp"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="30dp"
            />
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header_sidebar"
        app:menu="@menu/menu_find_us"
        android:layout_gravity="start"
        android:background="@color/sideBarWhiteColor"
        />

</androidx.drawerlayout.widget.DrawerLayout>